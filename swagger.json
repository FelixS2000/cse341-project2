{
  "openapi": "3.0.0",
  "info": {
      "title": "CRUD API",
      "version": "1.0.0",
      "description": "API for managing customers and magazines"
  },
  "components": {
      "schemas": {
          "Customer": {
              "type": "object",
              "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "subscriptionPlan": { "type": "string" },
                  "joinedDate": { "type": "string", "format": "date" },
                  "magazinesSubscribed": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["name", "email", "subscriptionPlan", "joinedDate"]
          },
          "Magazine": {
              "type": "object",
              "properties": {
                  "title": { "type": "string" },
                  "publisher": { "type": "string" },
                  "genre": { "type": "string" },
                  "price": { "type": "number" },
                  "releaseDate": { "type": "string", "format": "date" },
                  "availableCopies": { "type": "number" }
              },
              "required": ["title", "publisher", "genre", "price", "releaseDate", "availableCopies"]
          }
      }
  },
  "paths": {
      "/api/customers": {
          "post": {
              "summary": "Create a new customer",
              "requestBody": {
                  "required": true,
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/Customer"
                          }
                      }
                  },
                  "responses": {
                      "201": { "description": "Customer created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Customer" } } } },
                      "400": { "description": "Invalid input" },
                      "500": { "description": "Server error" }
                  }
              },
              "parameters": [
                  {
                      "name": "accept",
                      "in": "header",
                      "required": true,
                      "description": "Accept header for application/json",
                      "schema": {
                          "type": "string",
                          "example": "application/json"
                      }
                  }
              ]
          },
          "get": {
              "summary": "Retrieve all customers",
              "responses": {
                  "200": {
                      "description": "A list of customers",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "array",
                                  "items": {
                                      "$ref": "#/components/schemas/Customer"
                                  }
                              }
                          }
                      }
                  },
                  "500": { "description": "Server error" }
              }
          },
          "put": {
              "summary": "Update an existing customer",
              "requestBody": {
                  "required": true,
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/Customer"
                          }
                      }
                  },
                  "responses": {
                      "200": { "description": "Customer updated successfully", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Customer" } } } },
                      "400": { "description": "Invalid input" },
                      "404": { "description": "Customer not found" },
                      "500": { "description": "Server error" }
                  }
              },
              "parameters": [
                  {
                      "name": "accept",
                      "in": "header",
                      "required": true,
                      "description": "Accept header for application/json",
                      "schema": {
                          "type": "string",
                          "example": "application/json"
                      }
                  }
              ]
          },
          "delete": {
              "summary": "Delete a customer",
              "parameters": [
                  {
                      "name": "id",
                      "in": "path",
                      "required": true,
                      "description": "ID of the customer to delete",
                      "schema": {
                          "type": "string"
                      }
                  },
                  {
                      "name": "accept",
                      "in": "header",
                      "required": true,
                      "description": "Accept header for application/json",
                      "schema": {
                          "type": "string",
                          "example": "application/json"
                      }
                  }
              ],
              "responses": {
                  "204": { "description": "Customer deleted successfully" },
                  "404": { "description": "Customer not found" },
                  "500": { "description": "Server error" }
              }
          }
      },
      "/api/magazines": {
          "post": {
              "summary": "Create a new magazine",
              "requestBody": {
                  "required": true,
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/Magazine"
                          }
                      }
                  },
                  "responses": {
                      "201": { "description": "Magazine created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Magazine" } } } },
                      "400": { "description": "Invalid input" },
                      "500": { "description": "Server error" }
                  }
              },
              "parameters": [
                  {
                      "name": "accept",
                      "in": "header",
                      "required": true,
                      "description": "Accept header for application/json",
                      "schema": {
                          "type": "string",
                          "example": "application/json"
                      }
                  }
              ]
          },
          "get": {
              "summary": "Retrieve all magazines",
              "responses": {
                  "200": {
                      "description": "A list of magazines",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "array",
                                  "items": {
                                      "$ref": "#/components/schemas/Magazine"
                                  }
                              }
                          }
                      }
                  },
                  "500": { "description": "Server error" }
              }
          },
          "put": {
              "summary": "Update an existing magazine",
              "requestBody": {
                  "required": true,
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/Magazine"
                          }
                      }
                  },
                  "responses": {
                      "200": { "description": "Magazine updated successfully", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Magazine" } } } },
                      "400": { "description": "Invalid input" },
                      "404": { "description": "Magazine not found" },
                      "500": { "description": "Server error" }
                  }
              },
              "parameters": [
                  {
                      "name": "accept",
                      "in": "header",
                      "required": true,
                      "description": "Accept header for application/json",
                      "schema": {
                          "type": "string",
                          "example": "application/json"
                      }
                  }
              ]
          },
          "delete": {
              "summary": "Delete a magazine",
              "parameters": [
                  {
                      "name": "id",
                      "in": "path",
                      "required": true,
                      "description": "ID of the magazine to delete",
                      "schema": {
                          "type": "string"
                      }
                  },
                  {
                      "name": "accept",
                      "in": "header",
                      "required": true,
                      "description": "Accept header for application/json",
                      "schema": {
                          "type": "string",
                          "example": "application/json"
                      }
                  }
              ],
              "responses": {
                  "204": { "description": "Magazine deleted successfully" },
                  "404": { "description": "Magazine not found" },
                  "500": { "description": "Server error" }
              }
          }
      }
  }
}
